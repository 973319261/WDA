<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_border_radius_fill">
        <ImageView
            android:id="@+id/iv_notice_logo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.6"
            android:overScrollMode="always"
            android:src="@drawable/ic_file" />
        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="@string/text_notice_theme"/>
                <TextView
                    android:id="@+id/tv_notice_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:maxLines="1"
                    android:textSize="14dp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="@string/text_notice_author"/>
                <TextView
                    android:id="@+id/tv_notice_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="@string/text_notice_postdate"/>
                <TextView
                    android:id="@+id/tv_notice_postdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>